<%= provide(:title,  "Edit " + sanitize(@post.title)) %>

<%= render 'partials/header' %>

<main class="container">
  <div class="form-container">

    <h2>Edit <%= @post.title %></h2>

    <%= form_for(@post, url: post_path) do |f| %>
      <div class="field">
        <%= f.text_field :title, placeholder: "title", class: "text-field" %>
      </div>
      <div class="field">
        <%= f.text_field :slug, placeholder: "slug", class: "text-field" %>
      </div>
      <div class="field">
        <%= f.text_field :image, placeholder: "image", class: "text-field" %>
      </div>
      <div class="field">
        <%= f.text_area :description, placeholder: "description", class: "text-area" %>
      </div>
      <div class="field">
        <%= f.text_area :content, placeholder: "content", class: "text-area" %>
      </div>
      <div class="actions">
        <%= f.submit "publish post", class: "submit-button" %>
      </div>
    <% end %>

  </div>
</main>
